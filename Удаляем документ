ОбъектДляУдаления = а;

               Попытка

                              Об = ОбъектДляУдаления.ПолучитьОбъект();
                              Если Об = Неопределено Тогда
                                              Сообщить("Объект не найден!");
                                              Перейти ~мВозврат;
                              КонецЕсли;

                              НачатьТранзакцию();

                              ПредставлениеОбъекта = "" + Об;

                              Если Метаданные.Документы.Содержит(Об.Метаданные()) Тогда
                                              Для каждого Набор из об.Движения Цикл
                                                              Набор.Очистить(); //надо ли?
                                                              ОбменДаннымиМодуль.УстановитьСвойстваОбъектаДляБезмиграционнойЗаписи(Набор);
                                                              Набор.Записать();
                                              КонецЦикла;
                              КонецЕсли;

                              ОбменДаннымиМодуль.УстановитьСвойстваОбъектаДляБезмиграционнойЗаписи(Об);
                              Об.Удалить();

                              ЗафиксироватьТранзакцию();

                              Сообщить("DEL: " + ПредставлениеОбъекта, СтатусСообщения.Информация);

               Исключение

                              ОтменитьТранзакцию();
                              Сообщить("Ошибка при удалении объекта из базы: " + ОписаниеОшибки(), СтатусСообщения.Внимание);

               КонецПопытки;
